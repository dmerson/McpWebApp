@page "{contactId:int?}"
@model McpWebApp.Pages.ContactAddresses.CreateModel
@{
    ViewData["Title"] = "Create Contact Address";
}
<h1>Create Contact Address</h1>
<form method="post">
    <input type="hidden" asp-for="ContactAddress.ContactId" />
    <div class="form-group">
        <label asp-for="ContactAddress.AddressType"></label>
        <input asp-for="ContactAddress.AddressType" class="form-control" />
        <span asp-validation-for="ContactAddress.AddressType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress.Address1"></label>
        <input asp-for="ContactAddress.Address1" class="form-control" />
        <span asp-validation-for="ContactAddress.Address1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress.Address2"></label>
        <input asp-for="ContactAddress.Address2" class="form-control" />
        <span asp-validation-for="ContactAddress.Address2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress.City"></label>
        <input asp-for="ContactAddress.City" class="form-control" />
        <span asp-validation-for="ContactAddress.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress.State"></label>
        <input asp-for="ContactAddress.State" class="form-control" />
        <span asp-validation-for="ContactAddress.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress.Zip"></label>
        <input asp-for="ContactAddress.Zip" class="form-control" />
        <span asp-validation-for="ContactAddress.Zip" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>
