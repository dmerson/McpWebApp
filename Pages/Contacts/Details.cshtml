@page "{id:int}"
@model McpWebApp.Pages.Contacts.DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}
<h1>Contact Details</h1>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Contact.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Contact.LastName</dd>
        <dt class="col-sm-2">Birthdate</dt>
        <dd class="col-sm-10">@Model.Contact.Birthdate.ToShortDateString()</dd>
    </dl>
</div>
<p>
    <a asp-page="Edit" asp-route-id="@Model.Contact.Id">Edit</a> |
    <a asp-page="Index">Back to List</a>
</p>
