@page
@model McpWebApp.Pages.ContactPhones.IndexModel
@{
    ViewData["Title"] = "Contact Phones";
}
<h1>Contact Phones</h1>
<p>
    <a asp-page="Create" asp-route-id="@Request.Query["id"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Phone Type</th>
            <th>Phone Number</th>
            <th>Contact Id</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactPhones) {
        <tr>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id" asp-route-contactId="@item.ContactId">Edit</a> |
                <a asp-page="Delete" asp-route-id="@item.Id" asp-route-contactId="@item.ContactId">Delete</a>
            </td>
            <td>@item.PhoneType</td>
            <td>@item.PhoneNumber</td>
            <td>@item.ContactId</td>
        </tr>
}
    </tbody>
</table>
